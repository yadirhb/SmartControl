        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/layout_emergencia_bomberos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alto_titulo_principal"
        android:layout_margin="@dimen/margen_4" >

        <ImageView
            android:id="@+id/img_menu_emergencia_bombero"
            android:layout_width="@dimen/alto_titulo_principal"
